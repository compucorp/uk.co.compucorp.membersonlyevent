<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/MembersOnlyEvent</base>
  <class>MembersOnlyEventSelectPriceField</class>
  <name>membersonlyevent_select_price_field</name>
  <comment>Join table for storing selected price field for members only event</comment>
  <log>true</log>

  <field>
    <name>members_only_event_id</name>
    <title>Members-only event ID</title>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Members-only event ID.</comment>
  </field>
  <foreignKey>
    <name>members_only_event_id</name>
    <table>membersonlyevent</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>price_field_id</name>
    <title>Price Field ID</title>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Selected Price Field ID.</comment>
  </field>
  <foreignKey>
    <name>price_field_id</name>
    <table>civicrm_price_field</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

</table>
